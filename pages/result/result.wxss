/* result.wxss */
.page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  padding-bottom: 40rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  box-sizing: border-box;
}

/* 视频和信息区块 */
.video-block {
  background: white;
  margin: 20rpx 0;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  width: 100%;
  box-sizing: border-box;
}

/* 视频封面 */
.video-cover {
  position: relative;
  width: 100%;
  height: 500rpx;
  background: #000;
  overflow: hidden;
}

.video-cover image {
  width: 100%;
  height: 100%;
}

.play-btn-icon {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 100rpx;
  height: 100rpx;
  background: rgba(128, 128, 128, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.play-btn-icon::after {
  content: '';
  width: 0;
  height: 0;
  border-left: 40rpx solid #fff;
  border-top: 25rpx solid transparent;
  border-bottom: 25rpx solid transparent;
  margin-left: 8rpx;
}

/* 视频信息容器 */
.video-info {
  background: white;
  margin: 0;
  padding: 20rpx 25rpx;
  width: 100%;
  box-sizing: border-box;
  border-top: 1rpx solid #f0f0f0;
}

/* 视频标题 */
.video-title {
  padding: 0;
  margin-bottom: 20rpx;
  font-size: 32rpx;
  color: #333;
  line-height: 1.6;
  font-weight: bold;
}

/* 作者信息 */
.author-section {
  display: flex;
  align-items: center;
  padding: 0;
  border-top: 0;
}

.author-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 2rpx solid #f0f0f0;
  flex-shrink: 0;
}

.author-info {
  flex: 1;
}

.author-name {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

/* 操作区域 */
.action-row {
  display: flex;
  gap: 15rpx;
  padding: 20rpx 25rpx;
  border-top: 1rpx solid #f0f0f0;
  box-sizing: border-box;
}

.action-btn {
  border-radius: 12rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  font-weight: bold;
}

.action-section .action-btn {
  width: 100%;
  height: 88rpx;
  font-size: 32rpx;
}

.action-row .action-btn {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
}

.action-btn.primary {
  background: #333;
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.action-btn.secondary {
  background: white;
  color: #333;
  border: 1rpx solid #f0f0f0;
}

.btn-text {
  font-size: 28rpx;
}


/* 全屏视频播放 */
.fullscreen-video {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: #000;
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-bottom: 80rpx;
}

.fullscreen-video-element {
  width: 100%;
  height: 100%;
  background: #000;
  padding-bottom: 40rpx;
}

.close-btn {
  position: fixed;
  top: 80rpx;
  left: 40rpx;
  width: 80rpx;
  height: 80rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: white;
  z-index: 10000;
}
